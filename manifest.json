{
  "name": "Event Finder by Sameer Chitley",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Find nearby events! Powered by Eventbrite.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/js/background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Event Finder",
    "default_popup": "src/views/popup.html"
  },
  "permissions": [
    "geolocation",
    "https://www.eventbriteapi.com/v3/*",
    "http://fonts.googleapis.com/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
